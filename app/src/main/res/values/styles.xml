<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorDarkAccent</item>
        <item name="android:actionBarTheme">@style/NewActionBar</item>
        <item name="android:textColor">#000000</item>
        <item name="android:fontFamily">@font/poppins</item>
    </style>
    <style name="NewActionBar" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:background">@color/colorPrimary</item>
        <item name="android:titleTextColor">#000000</item>
        <item name="android:fontFamily">@font/poppins_semibold</item>
    </style>
</resources>
